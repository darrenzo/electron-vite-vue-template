{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["customTypes/*.d.ts", "src/**/*", "src/**/*.vue"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@assets/*": ["src/assets/*"],
            "@common/*": ["src/common/*"],
            "@config/*": ["config/*"],
            "@renderer/*": ["src/renderer/*"],
            "@main/*": ["src/main/*"]
        }
    },

    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
